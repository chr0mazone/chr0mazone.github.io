---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Badge from '../components/Badge.astro';
import { Github, Twitter, Mail, Monitor, Shield, Linkedin } from 'lucide-astro';
import { projects, skills } from '../data/projects';
---

<BaseLayout title="About" description="Learn more about me â€” pentester, CTF player, tool builder.">
  <div class="page-container">
    <div class="about-layout">

      <!-- Hero -->
      <section class="about-hero">
        <div>
          <h1 class="about-name">Arjit<span>_rbx86</span></h1>
          <p class="about-role">
            <span class="prompt">$</span>
            whoami &mdash; Cybersecurity Researcher &amp; CTF Player
          </p>
          <p class="about-bio">
            Hi! I'm a cybersecurity enthusiast focused on offensive security, network analysis,
            and reverse engineering. I write detailed writeups, build tools, and share research here.
            When I'm not hacking, I'm probably drinking coffee and reading about how things break.
          </p>
          <div class="about-links">
            <a href="www.linkedin.com/in/arjitpraveen" target="_blank" rel="noopener" class="about-link">
              <Github size={15} strokeWidth={2} aria-hidden="true" /> GitHub
            </a>
            <a href="https://www.linkedin.com/in/arjitpraveen/" target="_blank" rel="noopener" class="about-link">
              <Linkedin size={15} strokeWidth={2} aria-hidden="true" /> Linkedin
            </a>
            <a href="mailto:arjitpraveen.sec@gmail.com" class="about-link">
              <Mail size={15} strokeWidth={2} aria-hidden="true" /> Email
            </a>
          </div>
        </div>

        <div>
          <img src="https://avatars.githubusercontent.com/u/210249546?v=4" alt="Your Name" class="about-avatar" />
        </div>
      </section>

      <!-- Projects carousel -->
      <section class="projects-section">
        <h2>
          <Monitor size={18} strokeWidth={2} aria-hidden="true" />
          Projects
        </h2>
        <div class="projects-carousel-wrap">
          <div class="projects-carousel">
            {projects.map(project => <ProjectCard {...project} />)}
          </div>
        </div>
      </section>

      <!-- Skills -->
      <section class="skills-section">
        <h2>
          <Shield size={18} strokeWidth={2} aria-hidden="true" />
          Skills &amp; Interests
        </h2>
        <div class="skills-badges">
          {skills.map(({ tag }) => <Badge tag={tag} />)}
        </div>
      </section>

    </div>
  </div>
</BaseLayout>
