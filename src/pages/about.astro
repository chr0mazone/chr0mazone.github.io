---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Badge from '../components/Badge.astro';
import { Mail, Monitor, Shield, Linkedin } from '@lucide/astro';
import { siGithub, siLinkerd } from 'simple-icons';
import { projects, skills } from '../data/projects';
---

<BaseLayout title="About" description="Learn more about me â€” pentester, CTF player, tool builder.">
  <div class="page-container">
    <div class="about-layout">

      <!-- Hero -->
      <section class="about-hero">
        <div>
          <h1 class="about-name">Arjit<span>_rbx86</span> <em>(he/him)</em></h1>
          <p class="about-role">
            <span class="prompt">$</span>
            whoami &mdash; Cybersecurity Researcher &amp; CTF Player
          </p>
          <p class="about-bio">
            Hey there! Welcome to my blog :D I'm Arjit, an undergrad CS student and cybersecurity enthusiast. I enjoy doing HTB machines, playing in CTFs, and building stuff. And when I'm not doing either of those, I'm probably reading a book, play Sky COTL, the piano or doing math. I dedicated this blog to documenting my learning progress and sharing it to those who it might help. Happy reading!
          </p>
          <div class="about-links">
            <a href="https://github.com/chr0mazone" target="_blank" rel="noopener" class="about-link">
              <svg role="img" viewBox="0 0 24 24" width="15" height="15" fill="currentColor" aria-hidden="true"><path d={siGithub.path} /></svg>
              GitHub
            </a>
            <!-- <a href="https://www.linkedin.com/in/arjitpraveen/" target="_blank" rel="noopener" class="about-link">
              <svg role="img" viewBox="0 0 24 24" width="15" height="15" fill="currentColor" aria-hidden="true"><path d={siLinkerd.path} /></svg>
              LinkedIn
            </a> -->
            <a href="https://www.linkedin.com/in/arjitpraveen/" target="_blank" rel="noopener" class="about-link">
              <Linkedin size={15} stroke-width={2} aria-hidden="true" /> Linkedin
            </a>
            <a href="mailto:arjitpraveen.sec@gmail.com" class="about-link">
              <Mail size={15} stroke-width={2} aria-hidden="true" />
              Email
            </a>
          </div>
        </div>

        <div>
          <img src="/images/SKY_20251215_212622.png" alt="Your Name" class="about-avatar" />
        </div>
      </section>

      <!-- Projects carousel -->
      <section class="projects-section">
        <h2>
          <Monitor size={18} stroke-width={2} aria-hidden="true" />
          Projects
        </h2>
        <div class="projects-carousel-wrap">
          <div class="projects-carousel">
            {projects.map(project => <ProjectCard {...project} />)}
          </div>
        </div>
      </section>

      <!-- Skills -->
      <section class="skills-section">
        <h2>
          <Shield size={18} stroke-width={2} aria-hidden="true" />
          Skills &amp; Interests
        </h2>
        <div class="skills-badges">
          {skills.map(({ tag }) => <Badge tag={tag} />)}
        </div>
      </section>

    </div>
  </div>
</BaseLayout>