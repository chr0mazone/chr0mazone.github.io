---
import Badge from './Badge.astro';
import { Calendar, Monitor } from '@lucide/astro';

interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
  tags?: string[];
  status?: 'completed' | 'in-progress' | 'archived';
  date?: string;
}

const { title, description, href, image, tags = [], status, date } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class="project-card">
  {image ? (
    <img src={image} alt={title} class="project-card-image" loading="lazy" />
  ) : (
    <div class="project-card-image-placeholder">
      <Monitor size={32} stroke-width={2} aria-hidden="true" style="opacity:0.3" />
    </div>
  )}
  <div class="project-card-body">
    <div class="project-card-title">{title}</div>
    <div class="project-card-desc">{description}</div>
    {date && (
      <div class="project-card-meta">
        <Calendar size={12} stroke-width={3} aria-hidden="true" />
        {date}
      </div>
    )}
    <div class="project-card-tags">
      {status && <Badge tag={status} />}
      {tags.map(tag => <Badge tag={tag} />)}
    </div>
  </div>
</a>
